<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background" >

    <TextView
        android:id="@+id/lblTime"
        android:gravity="right"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="15"
        android:textColor="@color/white_text" >
    </TextView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp" >

        <TextView
            android:id="@+id/lblInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imgInfo1"
            android:paddingLeft="5dp"
            android:text="Neymar"
            android:textColor="@color/white_text" />

        <ImageView
            android:id="@+id/imgInfo1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lblScore"
            android:src="@drawable/icon_goal" />

        <TextView
            android:id="@+id/lblScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1-0"
            android:textColor="@color/apptheme_color"
            android:textSize="18sp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/imgInfo2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lblScore"
            android:src="@drawable/icon_goal" />

        <TextView
            android:id="@+id/lblInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/imgInfo2"
            android:paddingLeft="5dp"
            android:text="Neymar"
            android:textColor="@color/white_text" />
    </RelativeLayout>

</LinearLayout>